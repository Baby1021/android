<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.laiyuanwen.android.baby">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--华为安装apk权限-->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <!--小米权限-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <permission
        android:name="com.laiyuanwen.android.baby.permission.MIPUSH_RECEIVE"
        android:protectionLevel="signature"
        tools:replace="android:protectionLevel" />

    <uses-permission android:name="com.laiyuanwen.android.baby.permission.MIPUSH_RECEIVE" />

    <!-- 蒲公英 必选-->
    <uses-permission android:name="android.permission.RECORD_AUDIO" /> <!-- 允许程序录制音频 -->

    <application
        android:name=".BabyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:networkSecurityConfig">

        <meta-data
            android:name="PGYER_APPID"
            android:value="4470f4ca0c50925431c66812b7338ab5"></meta-data>

        <meta-data
            android:name="com.huawei.hms.client.appid"
            android:value="100621429" />

        <activity
            android:name=".push.PushActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/WelcomeTheme" />

        <!-- 欢迎页 -->
        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/WelcomeTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--登录页-->
        <activity android:name=".LoginActivity">

        </activity>

        <!-- 首页 -->
        <activity
            android:name=".ui.MainActivity"
            android:launchMode="singleTask">

        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>