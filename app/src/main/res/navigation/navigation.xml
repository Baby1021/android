<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/lovesFragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="com.laiyuanwen.android.baby.tasks.TasksFragment">

        <action
            android:id="@+id/action_home_to_user"
            app:destination="@id/user_fragment" />
    </fragment>

    <fragment
        android:id="@+id/lovesFragment"
        android:name="com.laiyuanwen.android.baby.love.LovesFragment"
        android:label="LovesFragment">
        <action
            android:id="@+id/action_home_fragment_to_imageDetailFragment"
            app:destination="@id/imageDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/action_lovesFragment_to_loveRemindsFragment"
            app:destination="@id/loveRemindsFragment" />

    </fragment>

    <fragment
        android:id="@+id/user_fragment"
        android:name="com.laiyuanwen.android.baby.user.UserFragment">

        <action
            android:id="@+id/action_user_to_home"
            app:destination="@id/home_fragment" />
    </fragment>

    <fragment
        android:id="@+id/imageDetailFragment"
        android:name="com.laiyuanwen.android.baby.love.ImageDetailFragment"
        android:label="ImageDetailFragment">

        <argument
            android:name="images"
            app:argType="string[]" />

        <argument
            android:name="index"
            app:argType="integer" />

    </fragment>

    <fragment
        android:id="@+id/loveRemindsFragment"
        android:name="com.laiyuanwen.android.baby.love.LoveRemindsFragment"
        android:label="LoveRemindsFragment">

        <argument
            android:name="loves"
            app:argType="com.laiyuanwen.android.baby.bean.Love[]" />

        <action
            android:id="@+id/action_loveRemindsFragment_to_imageDetailFragment"
            app:destination="@id/imageDetailFragment" />

    </fragment>

</navigation>
